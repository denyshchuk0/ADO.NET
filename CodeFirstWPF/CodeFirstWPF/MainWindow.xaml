<Window x:Class="CodeFirstWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CodeFirstWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Menu>
            <MenuItem Header="Clients" >
                <DataGrid Name="dgClients"/>
            </MenuItem>
            <MenuItem Header="Products">
                <DataGrid Name="dgProducts"/>
            </MenuItem>
            <MenuItem Header="Addres">
                <DataGrid Name="dgAddres"/>
            </MenuItem>
            <MenuItem Header="Categories">
                <DataGrid x:Name="dgCategories"/>
            </MenuItem>
            <MenuItem Header="Manufacturers">
                <DataGrid x:Name="dgManufacturers"/>
            </MenuItem>
            <MenuItem Header="Orders">
                <DataGrid x:Name="dgOrders"/>
            </MenuItem>
        </Menu>
    </Grid>
</Window>
