<Window x:Class="forStudents.StudentAdd"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:forStudents"
        mc:Ignorable="d"
        Title="StudentAdd" Height="300" Width="300" Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="31*"/>
            <RowDefinition Height="32*"/>
            <RowDefinition Height="30*"/>
            <RowDefinition Height="176*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <Label  Content="Name" Width="70"/>
            <TextBox Margin="5" Name="tbName"  Width="200" />
        </StackPanel>
        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <Label Content="Surname" Width="70"/>
        <TextBox Margin="5" Name="tbSurname"  Width="200" />
        </StackPanel>
        <StackPanel Grid.Row="2" Orientation="Horizontal">
            <Label Content="Group" Width="70"/>
            <ComboBox Name="cbGroups" Width="200" Margin="5"/>
        </StackPanel>
        <Button Grid.Row="3" Margin="5" Name="btnAdd" Content="Add" Click="btnAdd_Click" />
        <Button Grid.Row="3" Margin="5" Name="btnUpdate" Content="Update" Click="btnUpdate_Click" />

    </Grid>
</Window>
